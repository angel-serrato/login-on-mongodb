<% if (message.length>0) { %>
    <div class="container">
        <div class="row justify-content-center m-0">
            <div class="col-auto alert alert-primary alert-dismissible fade show" id="myAlert" role="alert">
                <div class="text-center">
                    <%= message %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    </div>
    <% } %>